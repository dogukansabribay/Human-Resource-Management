@model DataAccess.ViewModels.SifreDegistirmeViewModel

@{
    Layout = "";
    ViewData["Title"] = "";
}
<link href="~/Bootstrap4/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/Login.css" rel="stylesheet" />
<div class="login-wrap">
    <div class="login-html">
        <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Şifre Değiştir</label>
        <input id="tab-2" type="hidden" name="tab" class="for-pwd"><label for="tab-2" class="tab"></label>
        <div class="login-form">
            <form asp-action="ParolaDegistirme">
                <input type="hidden" asp-for="SifreId" />
                <input type="hidden" asp-for="CalisanId" />
                <div class="sign-in-htm">
                    <div class="group">
                        <input asp-for="EskiParola" class="form-control" type="password" placeholder="Şu anki şifre">
                    </div>
                    <div class="group">
                        <input asp-for="YeniParola" class="form-control" type="password" placeholder="Yeni Şifre">
                    </div>
                    <div class="group">
                        <input asp-for="YeniParolaTekrar" class="form-control" type="password" placeholder="Yeni Şifre Tekrar">
                    </div>
                    <div class="group">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </div>
                    <div class="group">
                        <label for="pass" class="label"></label>
                        <input id="pass" name="Password" type="hidden" class="input" data-type="password">
                    </div>

                    <div class="group">
                        <button class="btn icon-btn-save btn-success" type="submit">
                            <i class="fas fa-keyboard"></i> Kaydet
                        </button>
                    </div>
                    <div class="hr"></div>

                </div>
            </form>

        </div>
    </div>
</div>

<script src="~/Bootstrap4/js/bootstrap.min.js"></script>

<link href="~/css/ParolaDegistirme.css" rel="stylesheet" />
