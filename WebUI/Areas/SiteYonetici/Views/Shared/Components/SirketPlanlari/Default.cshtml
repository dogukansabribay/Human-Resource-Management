@model List<DataAccess.ViewModels.SirketUyelikPlanlariListeViewModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<link href="~/StyleSheetpersonelsıralama.css" rel="stylesheet" />

<table id="myTable">
    <tr class="header">
        <th>Şirket Adı</th>
        <th>Uyelik Tanımı</th>
        <th>Plan Ücreti</th>
        <th>Üyelik Başlangıç Tarihi</th>
        <th>Uyelik Bitiş Tarihi</th>
        <th>Aktiflik Durumu</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.SirketAdi)</td>
            <td>@Html.DisplayFor(modelItem => item.UyelikTanimi)</td>
            <td>  @Html.DisplayFor(modelItem => item.PlanUcreti)</td>
            <td>  @Html.DisplayFor(modelItem => item.BaslangicTarihi)</td>
            <td> @Html.DisplayFor(modelItem => item.BitisTarihi)</td>
            <td>@Html.DisplayFor(modelItem => item.IsActive)</td>           
            <td>               
                <a asp-action="UyelikPasif" asp-controller="UyelikPlani" asp-route-id="@item.Id">Pasif Et</a>
            </td>
        </tr>
    }


</table>