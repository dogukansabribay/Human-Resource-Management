@model Entities.Concrete.UyelikPlani
@{
    Layout = "~/Areas/SiteYonetici/Views/Shared/_LayoutSiteYonetici.cshtml";
}
<head>
    <link data-require="bootstrap-css@3.1.1" data-semver="3.1.1" rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" />

    <script data-require="bootstrap" data-semver="3.1.1" src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
<script data-require="jquery" data-semver="2.0.3" src="http://code.jquery.com/jquery-2.0.3.min.js"></script>
</head>

    <div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Confirm Delete</h4>
                </div>

                <div class="modal-body">
                    <p>@Model.UyelikPlaniTanimi paketi silmek üzeresiniz.</p>
                    <p>Devam etmek istiyor musunuz?</p>
                    <p class="debug-url"></p>
                    <p>Silmek istediğiniz paket: <strong> @Model.UyelikPlaniTanimi </strong></p>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <form asp-action="Delete">
                        @*<input type="hidden" asp-for="@Model.UyelikPlaniID" />*@
                        <input type="hidden" name="id" value="@Model.UyelikPlaniID" />
                        <input type="submit" value="SİL" class="btn btn-default" />       
                    </form>
                    
                </div>
            </div>
        </div>
    </div>

    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header" style="text-align:center">ÜYELİK PLANI SİLME PANELİ</div>
                    <div class="card-body">
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label text-md-right">Uyelik Plan Tanimi</label>
                                <div class="col-md-6">
                                    <label asp-for="@Model.UyelikPlaniTanimi" class="form-control">@Model.UyelikPlaniTanimi</label>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label text-md-right">Çalışan Sayısı</label>
                                <div class="col-md-6">
                                    <label asp-for="@Model.CalisanSayisi" class="form-control">@Model.CalisanSayisi</label>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label text-md-right">Fiyat</label>
                                <div class="col-md-6">
                                    <label asp-for="@Model.PlanUcreti" class="form-control">@Model.PlanUcreti</label>
                                </div>
                            </div>
                            <div class="form-group row">
                                
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label text-md-right"></label>
                                <div class="col-md-6">
                                    <button class="form-control" data-href="@Model.UyelikPlaniTanimi" data-toggle="modal" data-target="#confirm-delete">
                                    SİL
                                    </button>
                                </div>
                            </div>
                          




                    </div>

                </div>
            </div>
        </div>
    </div>
<script>
        $('#confirm-delete').on('show.bs.modal', function(e) {
            $(this).find('.btn-ok').attr('href', $(e.relatedTarget).data('href'));
        });
</script>