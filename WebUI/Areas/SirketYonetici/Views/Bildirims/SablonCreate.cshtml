@model Entities.Concrete.Bildirim

@{
    ViewData["Title"] = "SablonCreate";
}

<script src="~/Bootstrap4/js/bootstrap.bundle.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>
<link href="~/lib/bootstrap-toggle/css/bootstrap-toggle.min.css" rel="stylesheet" />
<script src="~/lib/bootstrap-toggle/js/bootstrap-toggle.min.js"></script>
<style>

    .center {
        left: 50%;
    }

    .dropzone {
        height: 80px;
        border: 1px dashed #999;
        border-radius: 3px;
        text-align: center;
    }

    .upload-input {
        position: relative;
        top: -62px;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
    }
</style>

<form asp-action="SablonCreate" asp-controller="Bildirims" enctype="multipart/form-data" style="width:500px; margin-left:25%">
    <div class="tab-content py-3 px-3 px-sm-0 events-tab-content">
        <div class="tab-pane fade show active" id="organizer-event" role="tabpanel" aria-labelledby="organizer-event-tab">
            @if (ViewBag.AktifligiDegistir != null)
            {
                <label class="text-danger">@ViewBag.AktifligiDegistir</label>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Baslik" class="control-label"></label>
                <input asp-for="Baslik" class="form-control" />
                <span asp-validation-for="Baslik" class="text-danger"></span>
            </div>
            <textarea class="summernote" asp-for="Icerik"></textarea>
            <div class="form-group">
                <label asp-for="SablonTanimi" class="control-label"></label>
                <select asp-for="SablonTanimi" asp-items="Html.GetEnumSelectList<SablonTanimi>()" class="form-control"></select>
            </div>
            <div class="form-group">
                <input asp-for="GonderilecekMi" type="checkbox" data-toggle="toggle" style="background-color: #5c99ae;" />Bu şablonu personellerinize göndermek için lütfen işaretleyin.
            </div>
            <div class="form-group">
                <input type="submit" value="Şablon Oluştur" class="btn btn-default w-100" />
            </div>
        </div>
    </div>
</form>
<script>
    $('.summernote').summernote({
        placeholder: 'Bir şeyler yazın veya düzenleyin..',
        tabsize: 2,
        height: 500
    });
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

