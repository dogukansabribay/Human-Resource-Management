@model DataAccess.ViewModels.FileUploadViewModel
@{
    ViewData["Title"] = "Index";
}

<style>

    .center {
        left: 50%;
    }

    .dropzone {
        height: 80px;
        border: 1px dashed #999;
        border-radius: 3px;
        text-align: center;
    }

    .upload-input {
        position: relative;
        top: -62px;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
    }
</style>

<link href="~/css/IzinHarcamaTalepCard.css" rel="stylesheet" />

<div class="content">
    <div class="d-flex justify-content-center">
        <div class="card">
            <div class="w-100">
                <div class="card-body">
                    <div class="card-title">
                        <h5>
                            İzin Bilgileri Yükleme Formu
                        </h5>
                    </div><hr />

                    <div class="row">
                        <a class="girisleft" asp-action="DownloadFile" asp-controller="IzinBilgileriYukleme" style="color:black; margin-left:25%">
                            Excel formatını yüklemek için buraya tıklayınız
                        </a>
                    </div>
                    @if (ViewBag.Hata != null)
                    {
                        <label class="girisleft">@ViewBag.Hata</label>
                    }
                    @if (ViewBag.Basari != null)
                    {
                        <label class="girisleft">@ViewBag.Basari</label>
                    }
                </div>
                <form asp-action="UploadFile" class="card-body" enctype="multipart/form-data">
                    <div class="dropzone w-100">
                        <span class="center">Dosya seçin veya sürükleyin</span>
                        <div class="center">
                            <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-cloud-upload" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M4.406 1.342A5.53 5.53 0 0 1 8 0c2.69 0 4.923 2 5.166 4.579C14.758 4.804 16 6.137 16 7.773 16 9.569 14.502 11 12.687 11H10a.5.5 0 0 1 0-1h2.688C13.979 10 15 8.988 15 7.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 2.825 10.328 1 8 1a4.53 4.53 0 0 0-2.941 1.1c-.757.652-1.153 1.438-1.153 2.055v.448l-.445.049C2.064 4.805 1 5.952 1 7.318 1 8.785 2.23 10 3.781 10H6a.5.5 0 0 1 0 1H3.781C1.708 11 0 9.366 0 7.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383z" />
                                <path fill-rule="evenodd" d="M7.646 4.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 5.707V14.5a.5.5 0 0 1-1 0V5.707L5.354 7.854a.5.5 0 1 1-.708-.708l3-3z" />
                            </svg>
                            <input asp-for="XlsFile" id="chooseFile" class="upload-input" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default col" style="margin-top:10px" id="#submitButton">Yükle</button>

                </form>
            </div>
        </div>
    </div>
</div>
