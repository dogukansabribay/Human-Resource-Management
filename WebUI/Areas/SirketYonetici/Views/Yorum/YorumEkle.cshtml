@model Entities.Concrete.KullaniciYorumu

@{
    ViewData["Title"] = "YorumEkle";
}
<script src="~/Bootstrap4/js/bootstrap.bundle.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>
<link href="~/lib/bootstrap-toggle/css/bootstrap-toggle.min.css" rel="stylesheet" />
<script src="~/lib/bootstrap-toggle/js/bootstrap-toggle.min.js"></script>

<div class="content">
    <div class="d-flex justify-content-center">
        <div class="card">
            <div class="w-100">
                <div class="card-body">
                    <div class="card-title">
                        <h5>
                            Yorum Ekleme
                        </h5>
                    </div><hr />
                    <form asp-action="YorumEkle" class="card-body" enctype="multipart/form-data">
                        @if (ViewBag.YorumTanimiHata != null)
                        {
                            <p class="text-danger">@ViewBag.YorumTanimiHata</p>
                        }
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="YorumDetay" class="control-label"></label>
                            <textarea asp-for="YorumDetay" class="form-control" style="height:150px"></textarea>
                            <span asp-validation-for="YorumDetay" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="YorumTanimi" class="control-label"></label>
                            <select asp-for="YorumTanimi" asp-items="Html.GetEnumSelectList<YorumTanimi>()" class="form-control"></select>
                            <span asp-validation-for="YorumTanimi" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="YayinlansinMi" type="checkbox" data-toggle="toggle" style="background-color: #5c99ae;" />Bu yorumunuzun sitemizde yayınlanmasına izin veriyorsanız, lütfen işaretleyin.
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-default w-100" value="Gönder" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
